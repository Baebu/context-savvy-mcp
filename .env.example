# MCP Context Server Environment Configuration

# Server Configuration
MCP_SERVER_NAME=mcp-context-server
MCP_SERVER_VERSION=1.0.0

# Logging Configuration
MCP_LOG_LEVEL=info
MCP_LOG_PRETTY=true

# Security Configuration
MCP_ALLOWED_COMMANDS=ls,cat,grep,find,git,npm,node,python,python3,echo,pwd,which,whoami
MCP_SAFEZONES=.,/tmp,/var/tmp
MCP_MAX_EXECUTION_TIME=30000
MCP_MAX_FILE_SIZE=10485760

# Database Configuration
MCP_DATABASE_PATH=./data/context.db
MCP_BACKUP_INTERVAL=60

# Performance Configuration
MCP_MAX_CONCURRENCY=10
MCP_QUEUE_SIZE=1000

# Development Settings
NODE_ENV=development
