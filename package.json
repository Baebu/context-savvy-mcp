{
  "name": "context-savvy-mcp",
  "version": "2.1.0",
  "description": "Advanced Model Context Protocol (MCP) Server with comprehensive context management, semantic search, and intelligent workflow automation",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "node ./scripts/build.js",
    "build:ts": "tsc --project tsconfig.json",
    "start": "node build/index.js",
    "dev": "npm run build:ts && npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "setup": "node ./scripts/setup.js",
    "health-check": "node ./scripts/health-check.js",

    "clean": "rimraf build dist coverage",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "context-management",
    "semantic-search",
    "ai-tools",
    "workflow-automation",
    "typescript",
    "claude",
    "anthropic"
  ],
  "author": "Context Savvy Development Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "better-sqlite3": "^9.6.0",
    "chokidar": "^3.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "inversify": "^6.0.2",
    "node-cron": "^3.0.3",
    "p-queue": "^8.1.0",
    "pino": "^9.1.0",
    "pino-pretty": "^11.1.0",
    "reflect-metadata": "^0.2.2",
    "semver": "^7.6.2",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0",
    "ws": "^8.17.0",
    "yaml": "^2.4.2",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.5",
    "meriyah": "^6.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.7",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^9.30.0",
    "husky": "^9.0.11",
    "jest": "^30.0.3",
    "lint-staged": "^15.2.5",
    "nodemon": "^3.1.3",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Baebu/context-savvy-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Baebu/context-savvy-mcp/issues"
  },
  "homepage": "https://github.com/Baebu/context-savvy-mcp#readme",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
