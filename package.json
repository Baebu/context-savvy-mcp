{
  "name": "mcp-context-server",
  "version": "2.0.0",
  "description": "A context-efficient MCP server for maximizing productivity in Claude chats with FastMCP and enhanced semantic memory",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:simple": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "config": "tsx scripts/config-ui.ts",
    "dev": "tsx watch src/index.ts",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:semantic": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration/semantic-search.test.ts",
    "debug:semantic": "tsx scripts/debug-semantic-storage.ts",
    "debug:di": "tsx scripts/debug-di-database.ts",
    "debug:dbpath": "tsx scripts/debug-db-path.ts",
    "debug:container": "tsx scripts/debug-container.ts",
    "test:getdb": "tsx scripts/test-getdatabase-method.ts",
    "test:mcpdb": "tsx scripts/test-mcp-db-schema.ts",
    "consent-ui": "tsx scripts/consent-ui.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "migrate:phase2": "tsx scripts/migrate-phase2-schema.ts",
    "test:mcp-db": "tsx scripts/test-mcp-database.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"config/**/*.{yaml,json}\" \"*.{json,md}\"",
    "migrate:vector": "tsx scripts/migrate-vector-storage.ts",
    "migrate:phase1": "tsx scripts/apply-phase1-migration.ts",
    "validate:phase1": "tsx scripts/validate-phase1-simple.ts",
    "inspect:db": "tsx scripts/inspect-db.ts",
    "cleanup:experimental": "tsx scripts/cleanup-experimental.ts",
    "cleanup:final": "tsx scripts/final-cleanup.ts",
    "claude-config": "node scripts/claude-config.js",
    "migrate": "tsx scripts/migrate.ts",
    "test:fastmcp": "tsx scripts/test-fastmcp.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "typescript",
    "productivity",
    "context-management",
    "semantic-search",
    "vector-embeddings",
    "fastmcp",
    "session-management"
  ],
  "author": "Baebu <bae.bu.8@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Baebu/mcp-context-server.git"
  },
  "homepage": "https://github.com/Baebu/mcp-context-server#readme",
  "bugs": {
    "url": "https://github.com/Baebu/mcp-context-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@tensorflow/tfjs-node": "^4.15.0",
    "better-sqlite3": "^11.6.0",
    "convict": "^6.2.4",
    "crypto": "^1.0.1",
    "fastmcp": "^2.0.0",
    "glob": "^10.3.10",
    "inversify": "^6.0.2",
    "lru-cache": "^10.0.0",
    "node-cron": "^3.0.3",
    "p-queue": "^8.0.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.1",
    "stream-json": "^1.8.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "ws": "^8.18.2",
    "yaml": "^2.3.4",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/convict": "^6.1.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/lru-cache": "^7.10.10",
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run type-check"
    }
  }
}
