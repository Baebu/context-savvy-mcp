{
  "name": "mcp-context-server",
  "version": "1.0.0",
  "description": "A context-efficient MCP server for maximizing productivity in Claude chats",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:simple": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "config": "tsx scripts/config-ui.ts",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration/comprehensive.test.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"config/**/*.{yaml,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"config/**/*.{yaml,json}\" \"*.{json,md}\"",
    "type-check": "tsc -p tsconfig.build.json --noEmit",
    "security-audit": "npm audit --audit-level moderate",
    "clean": "rimraf dist",
    "prepare": "husky install || true",
    "setup": "node scripts/setup.js",
    "health-check": "node scripts/health-check.js",
    "claude-config": "node scripts/claude-config.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "typescript",
    "productivity",
    "context-management"
  ],
  "author": "Baebu <bae.bu.8@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Baebu/mcp-context-server.git"
  },
  "homepage": "https://github.com/Baebu/mcp-context-server#readme",
  "bugs": {
    "url": "https://github.com/Baebu/mcp-context-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.5.0",
    "better-sqlite3": "^9.2.2",
    "convict": "^6.2.4",
    "inversify": "^6.0.2",
    "p-queue": "^8.0.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.1",
    "stream-json": "^1.8.0",
    "winston": "^3.17.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0-beta.3",
    "@types/better-sqlite3": "^7.6.8",
    "@types/convict": "^6.1.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run type-check"
    }
  }
}
